<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.uuzuche.lib_zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:inner_width="250dp"
        app:inner_height="250dp"
        app:inner_margintop="175dp"
        app:inner_corner_length="20dp"
        app:inner_corner_width="2dp"
        app:inner_corner_color="@color/green"
        app:inner_scan_speed="0"
        app:inner_scan_iscircle="false"
        app:inner_scan_bitmap="@drawable/zxing_line_trans"
        />
</FrameLayout>