<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/capture_containter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/fl_my_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingTop="25dp"
        android:orientation="vertical"
        android:background="@color/alpha_75_black"
        >
        <ImageView
            android:id="@+id/zxing_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="?attr/actionBarItemBackground"
            android:padding="10dp"
            android:src="@drawable/zxing_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/sacn"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="355dp"
        >
        <LinearLayout
            android:id="@+id/zxing_light"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_scan_open_light"
                android:layout_width="20dp"
                android:layout_height="39dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:src="@drawable/zxing_light"
                android:scaleType="fitEnd"
                />
            <TextView
                android:id="@+id/tv_scan_open_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="轻触照亮"
                android:textColor="@color/white"
                android:textSize="13sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_scan"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:text="将二维码放入框内，即可自动扫描"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            />
    </FrameLayout>
    <ImageView
        android:id="@+id/iv_scan_line"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:src="@drawable/zxing_line"
        />
    <FrameLayout
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="175dp"
        android:padding="0.2dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            />
        <ImageView
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            />
        <ImageView
            android:layout_gravity="left"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            />
        <ImageView
            android:layout_gravity="right"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            />
    </FrameLayout>
</RelativeLayout>