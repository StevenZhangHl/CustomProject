<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="greenToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>

    <style name="whiteToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>

        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="base_text">
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">15sp</item>

    </style>

    <!--距离左右边距-->

    <!--底部线-->
    <style name="divider">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--底部线-->
    <style name="divider_10">
        <item name="android:background">@color/color_f5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <!--普通dialog-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <declare-styleable name="MenuItem">
        <attr name="menu_title" format="string" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <style name="Animation_top_left">
        <item name="android:windowEnterAnimation">@anim/open_top_left</item>
        <item name="android:windowExitAnimation">@anim/close_top_left</item>
    </style>

    <style name="Animation_bottom_left">
        <item name="android:windowEnterAnimation">@anim/open_bottom_left</item>
        <item name="android:windowExitAnimation">@anim/close_bottom_left</item>
    </style>

    <style name="Animation_bottom_right">
        <item name="android:windowEnterAnimation">@anim/open_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/close_bottom_right</item>
    </style>

    <style name="Animation_top_right">
        <item name="android:windowEnterAnimation">@anim/open_top_right</item>
        <item name="android:windowExitAnimation">@anim/close_top_right</item>
    </style>
    <!--防止TabLayout字体全大写-->
    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <!--选择图片主题-->
    <style name="Matisse.HOREN" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryDark">@color/color_main</item>
        <item name="toolbar">@style/Toolbar.Zhihu</item>
        <item name="album.dropdown.title.color">@color/zhihu_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/zhihu_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/zhihu_album_dropdown_thumbnail_placeholder
        </item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/zhihu_album_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">
            @color/color_main
        </item>
        <item name="item.checkCircle.borderColor">@color/zhihu_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="bottomToolbar.bg">@color/zhihu_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/zhihu_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/color_main</item>
        <item name="preview.bottomToolbar.back.textColor">
            @color/zhihu_preview_bottom_toolbar_back_text
        </item>
        <item name="preview.bottomToolbar.apply.textColor">
            @color/zhihu_preview_bottom_toolbar_apply
        </item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="capture.textColor">@color/zhihu_capture</item>
    </style>
</resources>